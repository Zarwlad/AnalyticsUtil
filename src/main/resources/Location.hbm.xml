<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
package="ru.zarwlad.mdlp.downloadMdlpPartners.model">

    <class name="Location" table="location">
        <id name="branchId" column="branch_id"/>

        <property name="address" column="address"/>
        <property name="locationStatus" column="location_status">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">ru.zarwlad.mdlp.downloadMdlpPartners.model.LocationStatus</param>
                <param name="useNamed">true</param>
            </type>
        </property>
        <property name="addressFoundInFias" column="is_address_found_in_fias"/>
        <property name="safeWarehouse" column="is_safe_warehouse" />

        <many-to-one name="fias" column="fias_id"
                 class="ru.zarwlad.mdlp.downloadMdlpPartners.model.Fias"/>
        <many-to-one name="businessPartner" column="business_partner_id"
                     class="ru.zarwlad.mdlp.downloadMdlpPartners.model.BusinessPartner"/>
    </class>
</hibernate-mapping>